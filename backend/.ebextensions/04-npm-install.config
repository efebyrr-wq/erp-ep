container_commands:
  01_install_dev_dependencies:
    command: "cd /var/app/staging && npm install --include=dev"
    ignoreErrors: false
  02_build_application:
    command: "cd /var/app/staging && npm run build"
    ignoreErrors: false
  03_verify_build:
    command: "cd /var/app/staging && ls -la dist/ || echo 'Build failed - dist folder not found'"
    ignoreErrors: true

